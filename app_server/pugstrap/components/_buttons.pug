mixin btn-block(tipo, caption, awsme, style, size)
	- var estilo = (typeof style === 'undefined') ? "default" : style
	unless size
		button.btn.btn-block(class=`btn-${estilo}` type=tipo)
			+awsme(awsme)
			| &nbsp;#{caption}
	else
		button.btn.btn-block(class=`btn-${type} btn-${size}` type="button")
			+awsme(awsme)
			| &nbsp;#{caption}

mixin btn(caption,awsme,style,size)
	- var type = (typeof style === 'undefined') ? "default" : style
	unless size
		button.btn(class=`btn-${type}`,type="button")
			i
				+awsme(awsme)
					#{caption}
	else
		button.btn(class=`btn-${type} btn-${size}`,type="button")
			i
				+awsme(awsme)
					#{caption}

