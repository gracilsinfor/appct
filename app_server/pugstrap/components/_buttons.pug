//- button mixins
//- anchor buttons
mixin a-btn-block(texto, awsme, estilo, size)
	- const tamanho = (typeof size === 'undefined') ? "" : size
	unless size
		a.btn(class=`btn-${estilo} btn-block`, role='button')
			+awsme(awsme)
			| &nbsp; #{texto}
	else 
		a.btn(class=`btn-${estilo} btn-${size} btn-block`, role='button')
			+awsme(awsme)
			| &nbsp; #{texto}

mixin a-btn-block-back(id)
	unless id 
		a.btn.btn-block.btn-success(onclick = "history.back()" role='button') 
			+awsme("back")
			| &nbsp; retroceder
	else 
		a.btn.btn-block.btn-success(id= id onclick = "history.back()" role='button') 
			+awsme("back")
			| &nbsp; retroceder

mixin a-btn-back()
	a.btn.btn-success(onclick = "history.back()" role='button') 
		+awsme("back")
		| &nbsp; retroceder

mixin a-btn(url,awsme,texto,style)
	- var type = (typeof style === 'undefined') ? "default" : style
	a.btn(class=`btn-${type}`,href=url,role="button")
		+awsme(awsme)
		| &nbsp; #{texto}
		block

