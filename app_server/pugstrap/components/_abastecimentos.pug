mixin lista_de_abastecimentos_viatura(titulos, viatura, abastecimentos)
    +panel-info("Histórico de abastecimentos da viatura " + viatura.id_viatura)
        if viatura.ev 
            .table-responsive 
                .table-wrap
                    table.table.table-striped.table-hover
                        thead 
                            tr 
                                each titulo in titulos 
                                    th.text-right #{titulo}
                        tbody 
                            each item in abastecimentos 
                                tr.table-row
                                    td.small.text-right 
                                        +a-btn-block(`/Abastecimento/${viatura.id_viatura}/${item.id_abastecimento}`,item.id_abastecimento,"charging-station","info", "xs")
                                    td.small.text-right
                                        +a-btn-block(`/Turno/${item.id_tuno}`,item.id_turno,"people-arrows","primary", "xs")
                                    td.small.text-right #{item.d_ini} #{item.h_ini}
                                    td.small.text-right #{item.t_carga}
                                    td.small.text-right #{item.carga}
                                    td.small.text-right #{item.custo}
        else 
            .table-responsive
                .table-wrap
                    table.table.table-striped.table-hover
                        thead 
                            tr 
                                each titulo in titulos 
                                    th.text-right #{titulo}
                        tbody 
                            each item in abastecimentos 
                                tr.table-row
                                    td.text-right 
                                        +a-btn-block(`/Abastecimento/${viatura.id_viatura}/${item.id_abastecimento}`,item.id_abastecimento,"charging-station","info", "xs")
                                    td.text-right 
                                        +a-btn-block(`/Turno/${item.id_tuno}`,item.id_turno,"people-arrows","primary", "xs")
                                    td.text-right #{item.dia}
                                    td.text-right #{item.litros}
                                    td.text-right #{item.custo}            