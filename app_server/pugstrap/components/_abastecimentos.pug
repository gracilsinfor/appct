mixin lista_abastecimentos_ev_turno(turno)
    +panel-info("Lista de Abastecimentos do turno id: "+ turno.id_turno)
        div.table-responsive
            table.table.table-striped
                thead
                    tr
                        th.small.text-right id
                        th.d-none.d-sm-table-cell.small.text-right Odómetro
                        th.small.text-right Inicio
                        th.d-none.d-md-table-cell.small.text-right Q Ini
                        th.d-none.d-md-table-cell.small.text-right Fim
                        th.d-none.d-md-table-cell.small.text-right Q Fim
                        th.small.text-right Q Total
                        th.d-none.d-md-table-cell.small.text-right T Q
                        th.small.text-right Custo 
                        th.small.text-right Kms
                        th.small.text-right €/Km
                        th.small.text-right KWh/Kms
                tbody 
                    each linha in turno.abastecimentos
                        tr.table-row
                            td.small.text-right 
                                a.btn.btn-primary.btn-sm.btn-block(href="/Abastecimento/"+turno.id_viatura+"/"+linha.id_abastecimento) #{linha.id_abastecimento}
                            td.d-none.d-sm-table-cell.small.text-right #{linha.odometro}
                            td.small.text-right #{linha.h_ini}
                            td.small.text-right #{linha.q_ini}
                            td.small.text-right #{linha.h_fim}
                            td.small.text-right #{linha.q_fim}
                            td.small.text-right #{linha.carga}
                            td.small.text-right #{linha.t_carga}
                            td.small.text-right #{linha.custo}
                            td.small.text-right #{linha.kms_percorridos}
                            td.small.text-right #{linha.custo_km}
                            td.small.text-right #{linha.consumo_km}
                    tr.table-row
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right #{turno.tempo_total_q}
                        td.small.text-right #{turno.custo_total}
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;
                        td.small.text-right &nbsp;

