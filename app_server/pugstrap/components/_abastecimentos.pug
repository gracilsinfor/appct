mixin lista_abastecimentos_mt(titulos, dados)
    .table-responsive
        .table-wrap
            table.table.table-striped.table-hover
                thead 
                    tr 
                        each titulo in titulos 
                            th.text-right #{titulo}
                tbody 
                    each item in dados 
                        tr.table-row
                            td.text-right 
                                a.btn.btn-primary.btn-sm.btn-block(href="/Abastecimento/"+item.id_viatura+"/"+item.id_abastecimento) #{item.id_abastecimento}
                            td.text-right
                                a.btn.btn-primary.btn-sm.btn-block(href="/Viatura/"+item.id_viatura) #{item.id_viatura}                
                            td.text-right 
                                a.btn.btn-primary.btn-sm.btn-block(href="/Turno/"+item.id_turno) #{item.id_turno}
                            td.text-right #{item.data}
                            td.text-right #{item.litros}
                            td.text-right #{item.custo}

