nav.navbar.navbar-dark.bg-secondary.navbar-expand-md.rounded.mb-2.py-0.shadow(id="frmNavbar")
	.container-fluid
		navbar-brand.text-success
			a.nav-link(href="/viaturas" title="listagem de viaturas")
				.fa.fa-car.fa-fw
				.fa.fa-car.fa-fw
				| &nbsp; viaturas
		button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse")
			span.navbar-toggler-icon
		.collapse.navbar-collapse.justify-content-end(id="navbarCollapse")
			ul.navbar-nav(id="frmMenu")
				li.nav-item.fs-6.text-danger
					a.nav-link(id="bt_submit_dados" style="display:block" type="button" title="registar na base de dados")
						.fa.fa-save.fa-fw
						| &nbsp; guardar

.error.alert.alert-info(id="div_alert" style="display:none")=message

form(id="frm_viatura" name="frmViatura" action="/viaturas" method="post" enctype="multipart/form-data")
	.card.mb-3
		.card-header.bg-warning 
			.float-end
				label.container_chk.mb-0(for="chk_ativa")
					input(type="checkbox" id="chk_ativa" name="chkAtiva" checked disabled )
					.checkmark
					| ativa
			h6.mb-0="Dados da viatura"

		.card-body
			.row.d-flex.flex-row
				.col-xs-4.col-sm-5.col-md-5.col-lg-3
					.row
						.col-12.text-center
							div(id="img_foto_visible")
								img.img-fluid.rounded.mx-auto.d-block.mb-4.fa.fa-8x.fa-car(id="img_foto_H" name="imgFotoH" src="" alt=f1b9 placeholder="&#xf1b9" )
							div(id="img_foto_invisible" style="display:none")
								img.img-fluid.rounded.mx-auto.d-block.mb-4(id="img_foto" name="imgFoto" src=""  )
					.row
						.col-12.text-center
							label.btn.btn-warning.rounded(id="lbl_file_name" name="lblFileName" for="inp_file_img" title="selecionar ficheiro com foto atualizada")="selecionar ficheiro" 
							input.visuallyhidden(type="file" id="inp_file_img" name="inpFileImg" accept="image/*") 
							input.visuallyhidden(type="text" id= "txt_file_name_H" name="fileNameH" value="" )

				.col-xs-6.col-sm-7.col-md-7.col-lg-9
					.row.d-flex
						.col-6
							.form-group
								label.form-label.mt-2(for="txt_matricula") matrícula
								.input-group 
									.input-group-text
										.fa.fa-car.fa-fw
									input.form-control(type="text" id="txt_matricula" name="matricula" value="" )

						.col-4
							label.container_chk.mt-5(for="chk_ev")
								input(type="checkbox" id="chk_ev" name="chkEv")
								.checkmark
								| ev

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_qbateria") bateria (Kwh)
								.input-group 
									.input-group-text
										.fa.fa-battery-car.fa-fw
									input.form-control(type="text" id="txt_qbateria" name="qbateria" value="" disabled)

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_odometro") odómetro
								.input-group
									.input-group-text
										.fa.fa-tachometer.fa-fw
									input.form-control(type="text" id="txt_odometro" name="odometro" value="" )

						.col-12
							.form-group
								label.form-label.mt-2(for="txt_descricao") descrição
								.input-group 
									.input-group-text
										.fa.fa-clipboard.fa-fw
									input.form-control(type="text" id="txt_descricao" name="descricao" value= "" )

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_ultima_manutencao") última manutenção
								.input-group 
									.input-group-text
										.fa.fa-tools.fa-fw
									input.form-control(type="text" id="txt_ultima_manutencao" placeholder="última manutenção" name="ultimaManutencao" value= "" disabled )

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_proxima_manutencao") próxima manutenção
								.input-group 
									.input-group-text
										.fa.fa-tools.fa-fw
									input.form-control(type="text" id="txt_proxima_manutencao" name="proximaManutencao" placeholder="próxima manutenção" value= "" disabled)
		.card-footer
			.float-end="id: "


