div.alert.alert-info(id="div_alert" style="display: none")

form(id="frm_manutencao" name="frmManutencao" action="/viaturas/manutencoes/idv" method="post" enctype="text/plain")
	.card.mb-3
		.card-header.bg-danger 
			.float-end
				.input-group.input-group-sm.mb-0
					span.input-group-text
						.fa.fa-sign-hanging.fa-fw
						| Estado
					input.form-control(type="text" id="txt_estado" name="txtEstado" disabled value="agendada")
			.h5 Ficha de agendamento de manutenção da viatura:   
			
		.card-body
			.row.d-flex.flex-row
				.col-xs-4.col-sm-5.col-md-5.col-lg-3
					.row
						.col-12.text-center
							div(id="img_foto_visible")
								img.img-fluid.rounded.mx-auto.d-block.mb-4.fa.fa-8x.fa-user(id="img_foto" name="imgFoto" src="" alt=f1b9 placeholder="&#xf1b9" )

				.col-xs-6.col-sm-7.col-md-7.col-lg-9
					.row.d-flex
						.col-6
							.form-group
								label.form-label.mt-2(for="txt_odometro") 
								.input-group
									.input-group-text
										.fa.fa-tachometer.fa-fw
									input.form-control(type="text" id="txt_odometro" name="odometro" placeholder="kms marcados no odómetro" value="" )

						.col-6
							.form-group
								label.form-label.my-2(for="date_entrada") 
								.input-group 
									.input-group-text 
										.fa.fa-calendar-check.fa-fw
									input.form-control(type="date" id="date_entrada" name="entrada" placeholder="entrada na oficina" value="" )

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_oficina") 
								.input-group
									.input-group-text
										.fa.fa-warehouse.fa-fw
									input.form-control(type="text" id="txt_oficina" name="oficina" placeholder="oficina/reparador" value="" )

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_descricao")
								.input-group
									.input-group-text
										.fa.fa-text.fa-fw
									input.form-control(type="textarea" id="textarea_descricao" name="descricao" placeholder="descrição dos principais trabalhos realizados/a realizar" rows=8)

						.col-6
							.form-group
								label.form-label.my-2(for="date_saida") 
								.input-group 
									.input-group-text 
										.fa.fa-calendar-check.fa-fw
									input.form-control(type="date" id="date_saida" name="saida" placeholder="saída da oficina" value="" )

						.col-6
							.form-group
								label.form-label.mt-2(for="txt_custo") 
								.input-group
									.input-group-text
										.fa.fa-euro-sign.fa-fw
									input.form-control(type="text" id="txt_custo" name="custo" value="" placeholder="custo das intervenções")

		.card-footer
			.float-end="id: "

