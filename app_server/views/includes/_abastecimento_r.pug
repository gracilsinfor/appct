.container-fluid
	.row
		.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
			h2.page-header=title + " - " + sub_title
				.pull-right 
					+a-btn-back()
			.row
				.col-xs-12.col-sm-d-none.col-md-3.col-lg-2
					.row 
						.col.placeholder
							+snipet_viatura(turno)
					.row
						.col.placeholder
							+snipet_condutor(turno)
				.col-xs-12.col-sm-12.col-md-9.col-lg-10
					if viatura.ev
						+ficha_abastecimento_ev(abastecimento)
					else 
						+ficha_abastecimento_mt(abastecimento)
					+a-btn-block(`/Abastecimento/U/${abastecimento.id_viatura}/${abastecimento.id_abastecimento}`,"Atualizar ficha do abastecimento","edit","warning")
					br
					.row
						.col-xs-12.col-sm-12.col-md-12.col-lg-12
							+ficha_turno(turno)
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					if viatura.ev
						+lista_abastecimentos_ev_turno(turno)
					else 
						+lista_abastecimentos_mt_turno(turno)
			+a-btn-block-back()