			span.navbar-toggler-icon
		.collapse.navbar-collapse.justify-content-end(id="navbarCollapse")
			ul.navbar-nav(id="frmMenu")
				li.nav-item.fs-6
					a.nav-link(id="bt_atualizar_foto" name="btAtualizarFoto" type="button" title="mudar a foto da viatura")
						.fa.fa-car.fa-fw
