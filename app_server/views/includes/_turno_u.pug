.container-fluid
    .row 
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            h2.page-header=title+' - '+sub_title    
                .pull-right
                    +a-btn-back()
            .row
                .col-xs-12.col-sm-12.col-md-2.col-lg-2
                    .row
                        .col.placeholder
                            +snipet_condutor(turno)
                    .row
                        .col.placeholder
                            +snipet_viatura(turno)
                .col-xs-12.col-sm-12.col-md-10.col-lg-10
                    .row
                        .col
                            .container-fluid
                                +ficha_turno_u(turno)
                                +a-btn-block(`/Turno/U/${turno.id_turno}`, "Atualizar ficha de turno", "save", "danger")
                                br
                                .btn-block 
                                    +a-btn-block-back()
                                //- a.btn.btn-success.btn-block(onclick = "history.back()", role='button') Â« Voltar
                                br
                    .row
                        .col-xs-12.col-sm-12.col-md-6.col-lg-6
                            +ficha_faturacao_turno(faturacao)
                            br
                        .col-xs-12.col-sm-12.col-md-6.col-lg-6
                            +ficha_gratificacao_turno(faturacao)
            .row
                .col
                    if turno.ev
                        +lista_abastecimentos_ev_turno(turno)
                    else 
                        +lista_abastecimentos_mt_turno(turno)
