div.alert.alert-info(id="div_alert" style="display: none")

form(id="frm_condutor" name="frmCondutor" action=`/condutores/${condutor._id}` method="POST" enctype="multipart/form-data" disabled)
	.card.mb-3
		.card-header.bg-info
			.float-end 
					label.form-label.container_chk.mb-0(for="chk_ativo")
						input(type="checkbox" id="chk_ativo" name="chkAtivo" checked=condutor.estd disabled )
						.checkmark
						| ativo
			h6.mb-0=condutor.nome

		.card-body
			.row.d-flex.flex-row
				.col-xs-4.col-sm-5.col-md-5.col-lg-3
					.row
						.col-12.text-center
							div(id="img_foto_visible")
								img.img-fluid.rounded.mx-auto.d-block(id="img_foto" name="imgFoto" src=`/fotos/condutores/${condutor.fto}` title=condutor.nome)
							div(id="img_foto_invisible" style="display:none")
								img.img-fluid.rounded.mx-auto.d-block.mb-4(id="img_foto_H" name="imgFotoH" src=`/fotos/condutores/${condutor.fto}` title=condutor.nome)
					.row
						.col-12.text-center
							div(id="lbl_input_file_disabled"  style="display:block")
								label.col-10.btn.btn-info.btn-sm.me-auto.d-block(id="lbl_fn_disabled" name="lblFNDisabled" title="selecionar ficheiro com foto atualizada" disabled) #{condutor.fto}

							div(id="lbl_input_file_enabled" style="display:none")
								label.btn.btn-warning.rounded(id="lbl_file_name" name="lblFileName" for="inp_file_img" title="selecionar ficheiro com foto atualizada") #{condutor.fto}

							input.visuallyhidden(type="text" id= "txt_file_name_H" name="fileNameH" value=condutor.fto )
							input.visuallyhidden(type="file" id="inp_file_img" name="inpFileImg" accept="image/*") 

				.col-xs-6.col-sm-7.col-md-7.col-lg-9
					.row.d-flex
						.col-xs-12.col-sm-12.col-md-12.col-lg-8
							.form-group 
								label.form-label.mt-2(for="txt_nome") nome
								.input-group 
									.input-group-text 
										.fa.fa-user.fa-fw
									input.form-control(type="text" id="txt_nome" name="nome" value=condutor.nome disabled)

						.col-xs-12.col-sm-12.col-md-12.col-lg-4
							.form-group
								label.form-label.mt-2(for="date_entrada") entrada
								.input-group 
									.input-group-text 
										.fa.fa-calendar-check.fa-fw
									input.form-control(type="date" id="date_entrada" name="entrada" value=condutor.entrd.substring(0,10) disabled )

					.row.d-flex
						.col-xs-12.col-sm-12.col-md-12.col-lg-6 
							.form-group
								label.form-label.mt-2(for="txt_nif") nif
								.input-group 
									.input-group-text 
										.fa.fa-id-card.fa-fw
									input.form-control(type="text" id="txt_nif" name="nif" value=condutor.nif disabled)

						.col-xs-12.col-sm-12.col-md-12.col-lg-6 
							.form-group
								label.form-label.mt-2(for="txt_kms") kms
								.input-group 
									.input-group-text 
										.fa.fa-road.fa-fw
									input.form-control(type="text" id="txt_kms" name="kms" value=condutor.kms disabled)

						.col-xs-12.col-sm-12.col-md-12.col-lg-6 
							.form-group 
								label.form-label.mt-2(for="txt_tel") telefone
								.input-group
									.input-group-text 
										.fa.fa-phone.fa-fw
									input.form-control(type="text" id="txt_tel" name="tel" value=condutor.tel disabled)

						.col-xs-12.col-sm-12.col-md-12.col-lg-6
							.form-group 
								label.form-label.mt-2(for="txt_email") email
								.input-group
									.input-group-text 
										.da.da-at.fa-fw
									input.form-control(type="text" id="txt_email" name="email" value=condutor.email disabled)

		.card-footer
			.float-end=`id: ${condutor._id}` 

