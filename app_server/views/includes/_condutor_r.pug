.container-fluid
    .row
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            h2.page-header=title+" - "+sub_title
                .pull-right
                    +a-btn-back()
            .row
                .col-xs-12.col-sm-12.col-md-4.col-lg-3.placeholder
                    +snipet_condutor(condutor)
                .col-xs-12.col-sm-12.col-md-8.col-lg-9
                    .row
                        +ficha_condutor(condutor)
                        .row.placeholder
                            .col.container-fluid
                                +a-btn-block(`/Condutor/U/${condutor.id_condutor}`,"Atualizar ficha do condutor","edit","warning")
                                +a-btn-block(`/Condutor/U/${condutor.id_condutor}`,"Atualizar credenciais do condutor","edit","warning")
                        .row 
                            +resumo_faturacao(condutor, faturacao_total)
            .row
                .col
                    +turnos_condutor(condutor, turnos)
            .row
                .col
                    .container-fluid
                        +a-btn-block-back()