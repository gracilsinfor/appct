.container-fluid
    .row
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            h2.page-header=title+" - "+sub_title
                .pull-right
                    +a-btn-back()
            .row
                .col-xs-12.col-sm-12.col-md-4.col-lg-3.placeholder
                    +snipet_viatura(viatura)
                .col-xs-12.col-sm-12.col-md-8.col-lg-9.placeholder
                    +ficha_viatura(viatura)
                    .container-fluid
                        .row
                            .col
                                +a-btn-block(`/Viatura/U/${viatura.id_viatura}`, "Atualizar ficha da viatura", "edit", "warning")
                            .col 
            .row 
                .col-xs-12.col-lg-6
                    +lista_de_manutencoes_viatura(viatura, manutencoes)
                    +a-btn-block(`/Manutencao/C/${viatura.id_viatura}`, "Marcar manuteção", "file-new", "warning")
                .col-xs-12.col-lg-6
                    +lista_de_abastecimentos_viatura(titulos, viatura, abastecimentos)
            .row 
                .col-xs-12.col-lg-12
                    +a-btn-block-back()

            .row.placeholders
                .col-sm-12.col-md-4.placeholder
                    .text-center
